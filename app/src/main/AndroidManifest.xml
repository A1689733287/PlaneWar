<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gtl.planewar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.gtl.planewar.view.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gtl.planewar.view.OptionActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.gtl.planewar.view.ScoreActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.gtl.planewar.view.HelpActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.gtl.planewar.view.ViewActivity"
            android:launchMode="singleInstance" />
    </application>

</manifest>